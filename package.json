{
  "name": "coh-erp",
  "version": "1.0.0",
  "description": "Creatures of Habit ERP System",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "pnpm --filter coh-erp-server dev",
    "dev:shared": "pnpm --filter @coh/shared dev",
    "build": "pnpm --filter @coh/shared build && pnpm --filter coh-erp-server build && pnpm --filter client build",
    "build:shared": "pnpm --filter @coh/shared build",
    "build:server": "pnpm --filter coh-erp-server build",
    "build:client": "pnpm --filter client build",
    "start": "pnpm --filter coh-erp-server start",
    "test": "pnpm --filter coh-erp-server test",
    "typecheck": "pnpm --filter @coh/shared typecheck && pnpm --filter coh-erp-server typecheck && pnpm --filter client typecheck",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:create": "prisma migrate dev --create-only",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:status": "prisma migrate status",
    "db:migrate:diff": "prisma migrate diff --from-schema-datasource prisma/schema.prisma --to-schema-datamodel prisma/schema.prisma",
    "db:studio": "prisma studio",
    "db:seed": "node prisma/seed.js",
    "db:reset": "prisma migrate reset",
    "install:all": "cd server && npm install && cd ../client && npm install",
    "coh": "npx tsx cli/src/index.ts"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "prisma-extension-kysely": "^3.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "prisma": "^5.22.0",
    "prisma-kysely": "^1.3.0",
    "tsx": "^4.21.0"
  }
}
