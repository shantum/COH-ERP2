{
  "name": "@coh/shared",
  "version": "0.1.0",
  "description": "Shared types and schemas for COH ERP",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "import": "./dist/schemas/index.js"
    },
    "./domain": {
      "types": "./dist/domain/index.d.ts",
      "import": "./dist/domain/index.js"
    },
    "./services": {
      "types": "./dist/services/index.d.ts",
      "import": "./dist/services/index.js"
    },
    "./services/db": {
      "types": "./dist/services/db/index.d.ts",
      "import": "./dist/services/db/index.js"
    },
    "./services/db/queries": {
      "types": "./dist/services/db/queries/index.d.ts",
      "import": "./dist/services/db/queries/index.js"
    },
    "./services/inventory": {
      "types": "./dist/services/inventory/index.d.ts",
      "import": "./dist/services/inventory/index.js"
    },
    "./services/orders": {
      "types": "./dist/services/orders/index.d.ts",
      "import": "./dist/services/orders/index.js"
    },
    "./services/bom": {
      "types": "./dist/services/bom/index.d.ts",
      "import": "./dist/services/bom/index.js"
    },
    "./config/access": {
      "types": "./dist/config/access.d.ts",
      "import": "./dist/config/access.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch"
  },
  "dependencies": {
    "@types/pg": "^8.16.0",
    "kysely": "^0.28.10",
    "pg": "^8.17.2",
    "typescript": "^5.7.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6"
  }
}
