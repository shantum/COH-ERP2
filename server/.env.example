# Database (PostgreSQL)
# Local development (Postgres.app on port 5444)
DATABASE_URL="postgresql://user:password@localhost:5444/coh_erp"

# Railway databases (get public URLs via: railway variables --service Postgres)
# Production/Staging: Use DATABASE_URL from Railway dashboard or CLI

# JWT Secret for authentication (IMPORTANT: use a strong, unique value and never change it)
JWT_SECRET="your-secret-key-change-in-production"
# JWT Expiry (default: 7d, for dev use: 30d or 90d)
# JWT_EXPIRY="30d"

# Server
PORT=3001

# Shopify Integration
SHOPIFY_SHOP_DOMAIN="yourstore.myshopify.com"
SHOPIFY_ACCESS_TOKEN="shpat_xxxxx"
SHOPIFY_WEBHOOK_SECRET=""

# iThink Logistics Integration
ITHINK_ACCESS_TOKEN=""
ITHINK_SECRET_KEY=""
ITHINK_PICKUP_ADDRESS_ID=""
ITHINK_RETURN_ADDRESS_ID=""
ITHINK_DEFAULT_LOGISTICS="delhivery"

# Background Workers
# Set to "true" to disable all background sync workers
# Useful when running locally while production is also running
# DISABLE_BACKGROUND_WORKERS=true
